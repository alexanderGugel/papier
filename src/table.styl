@require "config.styl";

table {
  border: 1px solid #eee;
  margin-bottom: 0.25em;
}

thead {
  background: #eee;
}

th, td {
  padding: 0.5em;
  border-right: 1px solid #eee;
}

tr {
  border-bottom: 1px solid #eee;
  &:last-child {
    border-bottom: 0;
  }
}

.zebra > * {
  &:nth-child(even) {
    background: #f9f9f9;
  }
  &:nth-child(odd) {
    background: #fff;
  }
}

.hover > * {
  transition: all 250ms;
  &:hover {
    background: lighten($light-blue, 90%);
  }
}