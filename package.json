{
  "name": "papier",
  "version": "0.0.0",
  "description": "Just another CSS framework (WIP)",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "stylus --include-css --watch src/papier.styl --out dist",
    "build": "stylus --include-css src/papier.styl --out dist && cleancss dist/papier.css -o dist/papier.min.css",
    "serve": "st --no-cache",
    "dev": "npm run serve & npm run watch"
  },
