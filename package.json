  "devDependencies": {
    "clean-css": "^2.2.23",
    "myth": "^1.2.1",
    "st": "^0.5.2",
    "stylus": "^0.49.3"
  },
  "dependencies": {
    "highlight.js": "^8.4.0",
    "normalize.css": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexanderGugel/papier.git"
  },
  "bugs": {
